<Window x:Class="PolestarTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PolestarTracker"
        mc:Ignorable="d"
        Title="Polestar Activity Tracker"
        MinHeight="600" MinWidth="800">

    <Grid>
        <Label x:Name="CurrentWindowTitle" Content="" Margin="10,10,0,0" HorizontalAlignment="Left"  VerticalAlignment="Top"/>
        <Label x:Name="CurrentProcessName" Margin="0,0,10,10" 
               HorizontalAlignment="Right" VerticalAlignment="Top" />

    </Grid>
</Window>
