<Application x:Class="PolestarTracker.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PolestarTracker"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Application.Resources>
        <ResourceDictionary.MergedDictionaries>
            <!-- Global Styles -->
            <ResourceDictionary Source="UI/Styles/Common.xaml"/>

            <!-- Material Design -->
            <materialDesign:CustomColorTheme BaseTheme="Dark" PrimaryColor="{StaticResource ColorPrimary}" SecondaryColor="{StaticResource ColorSecondary}" />
            <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />

            <!-- Custom Styles -->
            <ResourceDictionary Source="UI/Styles/AppBarButton.xaml" />
        </ResourceDictionary.MergedDictionaries>
    </Application.Resources>
</Application>
