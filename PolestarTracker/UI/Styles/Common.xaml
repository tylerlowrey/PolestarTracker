<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:PolestarTracker.WPF.UI.Styles">
    <!-- Colors -->
    <Color x:Key="ColorPrimary">#0D47A1</Color>
    <Color x:Key="ColorPrimaryAlt">#1565C0</Color>
    <Color x:Key="ColorBackground">#FFFFFF</Color>
    <Color x:Key="ColorSecondary">#d31145</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="BrushPrimary" Color="{StaticResource ColorPrimary}" />
    <SolidColorBrush x:Key="BrushPrimaryAlt" Color="{StaticResource ColorPrimaryAlt}" />
    <SolidColorBrush x:Key="BrushBackground" Color="{StaticResource ColorBackground}" />
    <SolidColorBrush x:Key="BrushSecondary" Color="{StaticResource ColorSecondary}" />

</ResourceDictionary>